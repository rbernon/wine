MODULE    = libwinefreetype.a
PARENTSRC = $(FREETYPE_SRCDIR)
EXTRADEFS = \
	-DFT2_BUILD_LIBRARY=1 \
	-DFT_CONFIG_OPTION_USE_BROTLI=1 \
	-DFT_CONFIG_OPTION_USE_BZIP2=1 \
	-DFT_CONFIG_OPTION_SYSTEM_ZLIB=1 \
	-DFT_CONFIG_OPTION_USE_PNG=1 \
	-D_UCRT
EXTRAINCL = \
	-I$(FREETYPE_SRCDIR)/include \
	-I$(FREETYPE_SRCDIR)/include/freetype \
	-I$(BROTLI_SRCDIR)/c/include \
	-I$(BZIP2_SRCDIR) \
	-I$(ZLIB_SRCDIR) \
	-I$(LIBPNG_SRCDIR)

