#ifndef __WINE_MESA_CXX_MUTEX
#define __WINE_MESA_CXX_MUTEX

#include "u_thread.h"

namespace std
{

struct mutex
{
    mtx_t lock;
    mutex() { mtx_init(&lock, mtx_plain); }
    ~mutex() { mtx_destroy(&lock); }
};

template <typename T>
struct lock_guard;

template <>
struct lock_guard<mutex>
{
    mutex &_mtx;
    lock_guard(mutex& mtx) : _mtx(mtx) { mtx_lock(&_mtx.lock); }
    ~lock_guard() { mtx_unlock(&_mtx.lock); }
};

} /* namespace std */

#endif /* __WINE_MESA_CXX_MUTEX */
